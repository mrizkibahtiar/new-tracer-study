            document.getElementById('deleteConfirmModal').style.display = 'none'; // Sembunyikan modal
        }

        // Menutup modal konfirmasi saat klik di luar area modal
        window.addEventListener('click', (event) => {
            const deleteConfirmModal = document.getElementById('deleteConfirmModal');
            if (event.target === deleteConfirmModal) {
                deleteConfirmModal.style.display = 'none'; // Sembunyikan modal
            }
        });
