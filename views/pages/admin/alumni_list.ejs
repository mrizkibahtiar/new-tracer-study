        function showDeleteConfirmModal(nisn) {
            const deleteConfirmModal = document.getElementById('deleteConfirmModal');
            const deleteNisnInput = document.getElementById('deleteNisnInput');

            deleteNisnInput.value = nisn; // Set NISN ke hidden input di form modal
            deleteConfirmModal.style.display = 'block'; // Tampilkan modal
        }

        // Fungsi untuk menutup modal konfirmasi penghapusan
