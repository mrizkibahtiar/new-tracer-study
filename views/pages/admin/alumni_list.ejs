    <script type="module">
        import { Grid, html } from "https://unpkg.com/gridjs?module";

        document.addEventListener("DOMContentLoaded", function (e) {
            const alumniTableElement = document.getElementById("table-gridjs");

            if (!alumniTableElement) {
                console.error("Elemen dengan ID 'table-gridjs' tidak ditemukan.");
                return;
            }

            try {
                const dataAlumni = JSON.parse(alumniTableElement.getAttribute("data-alumni"));
                const dataTracer = JSON.parse(alumniTableElement.getAttribute("data-tracer"));

                const dataTarcerMap = dataTracer.map((tracer) => [
                    tracer != null ? 'Sudah' : 'Belum',
                ]);
                console.log("Data Tracer Map:", dataTarcerMap);

                const dataAlumniMap = dataAlumni.map((alumni, index) => [
                    index + 1,
                    alumni.nama,
                    alumni.nisn,
                    alumni.jenisKelamin,
                    dataTarcerMap[index] && dataTarcerMap[index][0],
                ]);
                console.log("Data Alumni Map:", dataAlumniMap);

                class GridDatatable {
                    init() {
                        this.basicTableInit();
                    }
                    basicTableInit() {
                        console.log("Grid di dalam basicTableInit:", Grid); // Log objek Grid yang diimpor
                        if (Grid) {
                            new Grid({
                                columns: [
                                    {
                                        name: "No",
                                        formatter: (e) => html('<span class="font-semibold flex w-full justify-center">' + e + "</span>"),
                                    },
                                    {
                                        name: "Nama",
                                        formatter: (e) => html('<span style="font-size: 1.2rem;">' + e + "</span>"),
                                    },
                                    {
                                        name: "NISN",
                                        formatter: (e) => html('<span style="font-size: 1.2rem;">' + e + "</span>"),
                                    },
                                    {
                                        name: "Jenis Kelamin",
                                        formatter: (e) => html('<span style="font-size: 1.2rem;">' + e + "</span>"),
                                    },
                                    {
                                        name: "Tracer Study",
                                        formatter: (e) => {
                                            if (e === "Sudah") {
                                                return html(`<span style="font-weight: bold; color: white; background-color: #4CAF50; padding: 0.7rem 0.7rem; border-radius: 0.2rem;">${e} Mengisi</span>`);
                                            } else {
                                                return html(`<span style="font-weight: bold; color: white; background-color: #f44336; padding: 0.7rem 0.7rem; border-radius: 0.2rem;">${e} Mengisi</span>`);
                                            }
                                        },
                                    },
                                    {
                                        name: "Actions",
                                        formatter: (cell, row) => {
                                            const nisn = row.cells[2].data;
                                            const nama = row.cells[1].data; // Ambil nama
                                            const jenisKelamin = row.cells[3].data; // Ambil jenis kelamin

                                            return html(`
                                                <div style="display: flex; gap: 0.5rem; align-items: center;">
                                                    <button style="background-color: blue; color: white; border: none; padding: 0.2rem 0.5rem; border-radius: 10px; cursor: pointer; font-size: 1.2rem;">
                                                        <a href='/admin/alumni-list/${nisn}' style="color: white; text-decoration: none;">Detail</a>
                                                    </button>
                                                    <button
                                                        style="background-color: #ffc107; border: none; padding: 0.2rem 0.5rem; border-radius: 10px; cursor: pointer; font-size: 1.2rem; color: white;"
                                                        onclick="openEditModal('${nisn}', '${nama}', '$edit{jenisKelamin}')"
                                                    >
                                                        Edit
                                                    </button>
                                                    <button type="button" 
                                                        style="background-color: #f44336; color: white; border: none; padding: 0.2rem 0.5rem; border-radius: 10px; cursor: pointer; font-size: 1.2rem;"
                                                        onclick="showDeleteConfirmModal('${nisn}')">
                                                        Delete
                                                    </button>
                                                </div>
                                            `);
                                        },
                                    },
                                ],
                                pagination: { limit: 10 },
                                resizable: true,
                                sort: true,
                                search: true,
                                data: dataAlumniMap
                            }).render(alumniTableElement);
                        } else {
                            console.error("Pustaka Grid belum berhasil diimpor sebagai modul.");
                        }
                    }
                }

                const gridTable = new GridDatatable();
                gridTable.init();

            } catch (error) {
                console.error("Terjadi kesalahan:", error);
            }
        });
    </script>

    <!-- logic button edit -->
    <script>
        function openEditModal(nisn, nama, jenisKelamin) {
            const modal = document.getElementById("editAlumniModal");
            const modalTitle = document.getElementById("editModalTitle");
            const namaInput = document.getElementById("editNama");
            const nisnInput = document.getElementById("editNisnInput"); // Dapatkan elemen input NISN yang benar
            const jenisKelaminSelect = document.getElementById("editJenisKelamin");
            const form = document.getElementById("formEditAlumni");
            const editNisnHidden = document.getElementById("editNisn");

            modalTitle.textContent = "Edit Data Alumni";
            namaInput.value = nama;
            nisnInput.value = nisn;
            jenisKelaminSelect.value = jenisKelamin;
            editNisnHidden.value = nisn; // Set nilai input hidden untuk update (NISN lama)

            modal.style.display = "block";
        }

        document.getElementById('closeEditModalBtn').onclick = function () {
            document.getElementById('editAlumniModal').style.display = "none";
        }

        window.onclick = function (event) {
            if (event.target == document.getElementById('editAlumniModal')) {
                document.getElementById('editAlumniModal').style.display = "none";
            }
        }
    </script>

