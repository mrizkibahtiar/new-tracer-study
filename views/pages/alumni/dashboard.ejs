    <!-- modal tambah -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const isiFormBtn = document.getElementById('isiFormBtn');
            const tracerStudyModal = document.getElementById('tracerStudyModal');
            const closeTracerStudyModalBtn = document.getElementById('closeTracerStudyModalBtn');
            const kegiatanLulusSelect = document.getElementById('kegiatanLulus');

            // Get all dynamic sections
            const bekerjaSection = document.getElementById('bekerjaSection');
            const melanjutkanStudiSection = document.getElementById('melanjutkanStudiSection');
            const berwirausahaSection = document.getElementById('berwirausahaSection');
            const kursusSection = document.getElementById('kursusSection');
            const belumAdaKegiatanSection = document.getElementById('belumAdaKegiatanSection');

            // Function to hide all dynamic sections
            function hideAllDynamicSections() {
                bekerjaSection.style.display = 'none';
                melanjutkanStudiSection.style.display = 'none';
                berwirausahaSection.style.display = 'none';
                kursusSection.style.display = 'none';
                belumAdaKegiatanSection.style.display = 'none';
            }

            // Function to show the relevant section based on select value
            function showRelevantSection() {
                hideAllDynamicSections(); // Hide all first
                const selectedKegiatan = kegiatanLulusSelect.value;
                switch (selectedKegiatan) {
                    case 'Bekerja':
                        bekerjaSection.style.display = 'block';
                        break;
                    case 'Melanjutkan Studi':
                        melanjutkanStudiSection.style.display = 'block';
                        break;
                    case 'Berwirausaha':
                        berwirausahaSection.style.display = 'block';
                        break;
                    case 'Kursus':
                        kursusSection.style.display = 'block';
                        break;
                    case 'Belum Ada Kegiatan':
                        belumAdaKegiatanSection.style.display = 'block';
                        break;
                    default:
                        // No specific section for default/empty
                        break;
                }
            }

            // Event listener for opening the modal
            if (isiFormBtn) {
                isiFormBtn.addEventListener('click', () => {
                    tracerStudyModal.style.display = 'block';
                    // Optionally reset form or pre-fill if needed
                    document.getElementById('formTracerStudy').reset();
                    hideAllDynamicSections(); // Hide all sections when modal opens
                    // Ensure feedback section is always visible
                    document.getElementById('feedbackSection').style.display = 'block';
                });
            }

            // Event listener for closing the modal via 'x' button
            if (closeTracerStudyModalBtn) {
                closeTracerStudyModalBtn.addEventListener('click', () => {
                    tracerStudyModal.style.display = 'none';
                });
            }

            // Event listener for closing the modal when clicking outside the content
            if (tracerStudyModal) {
                tracerStudyModal.addEventListener('click', (event) => {
                    const modalContent = document.querySelector('#tracerStudyModal .modal-content');
                    if (event.target === tracerStudyModal && modalContent && !modalContent.contains(event.target)) {
                        tracerStudyModal.style.display = 'none';
                    }
                });
            }

            // Event listener for changes in the "Kegiatan setelah Lulus" select box
            if (kegiatanLulusSelect) {
                kegiatanLulusSelect.addEventListener('change', showRelevantSection);
            }

            // Initial call to hide sections if modal is loaded with a pre-selected value (unlikely for a new form)
            showRelevantSection();
        });
    </script>

    <!-- modal edit -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const editFormBtn = document.getElementById('editFormBtn');
            const editTracerStudyModal = document.getElementById('editTracerStudyModal');
            const closeEditTracerStudyModalBtn = document.getElementById('closeEditTracerStudyModalBtn');
            const editKegiatanLulusSelect = document.getElementById('editKegiatanLulus');

            const editBekerjaSection = document.getElementById('editBekerjaSection');
            const editMelanjutkanStudiSection = document.getElementById('editMelanjutkanStudiSection');
            const editBerwirausahaSection = document.getElementById('editBerwirausahaSection');
            const editKursusSection = document.getElementById('editKursusSection');
            const editBelumAdaKegiatanSection = document.getElementById('editBelumAdaKegiatanSection');

            function toggleEditSections(selectedActivity) {
                console.log('Toggling sections for:', selectedActivity);
                editBekerjaSection.style.display = 'none';
                editMelanjutkanStudiSection.style.display = 'none';
                editBerwirausahaSection.style.display = 'none';
                editKursusSection.style.display = 'none';
                editBelumAdaKegiatanSection.style.display = 'none';

                if (selectedActivity === 'Bekerja') {
                    editBekerjaSection.style.display = 'block';
                } else if (selectedActivity === 'Melanjutkan Studi') {
                    editMelanjutkanStudiSection.style.display = 'block';
                } else if (selectedActivity === 'Berwirausaha') {
                    editBerwirausahaSection.style.display = 'block';
                } else if (selectedActivity === 'Kursus') {
                    editKursusSection.style.display = 'block';
                } else if (selectedActivity === 'Belum Ada Kegiatan') {
                    editBelumAdaKegiatanSection.style.display = 'block';
                }
            }

            function fillEditModalFormWithData() {
                const tracerStudyDataString = editFormBtn.dataset.tracerStudy;
                const alumniId = editFormBtn.dataset.alumniId;

                console.log('Raw data-tracer-study string:', tracerStudyDataString);
                console.log('Raw data-alumni-id:', alumniId);

                let tracerStudyDataArray = [];
                if (tracerStudyDataString) {
                    try {
                        tracerStudyDataArray = JSON.parse(tracerStudyDataString);
                    } catch (e) {
                        console.error("Error parsing tracerStudyData from data attribute:", e);
                        tracerStudyDataArray = [];
                    }
                }

                const tracerStudyData = tracerStudyDataArray.length > 0 ? tracerStudyDataArray[0] : {};

                console.log('Parsed tracerStudyData (Object to fill form):', tracerStudyData);

                if (Object.keys(tracerStudyData).length > 0) {
                    document.getElementById('editModalTracerStudyId').value = tracerStudyData._id || '';
                    document.getElementById('editModalAlumniId').value = alumniId || '';
                    document.getElementById('editInputEmail4').value = tracerStudyData.email || '';
                    document.getElementById('editTahunLulus').value = tracerStudyData.tahunLulus || '';

                    const kegiatanValueFromData = tracerStudyData.kegiatan; // Sudah diperbaiki di sini sebelumnya

                    editKegiatanLulusSelect.value = kegiatanValueFromData || '';

                    console.log('Value from data (kegiatan):', kegiatanValueFromData);
                    console.log('editKegiatanLulusSelect.value after setting:', editKegiatanLulusSelect.value);

                    const optionExists = Array.from(editKegiatanLulusSelect.options).some(option => option.value === kegiatanValueFromData);
                    console.log('Does option value exist in HTML select?', optionExists);

                    toggleEditSections(editKegiatanLulusSelect.value);

                    const kegiatanDetail = tracerStudyData.kegiatanDetail;
                    if (kegiatanDetail) {
                        if (kegiatanValueFromData === 'Bekerja') {
                            document.getElementById('editNamaPerusahaan').value = kegiatanDetail.namaPerusahaan || '';
                            document.getElementById('editAlamatPerusahaan').value = kegiatanDetail.alamatPerusahaan || '';
                            document.getElementById('editTeleponPerusahaan').value = kegiatanDetail.teleponPerusahaan || '';
                            document.getElementById('editSektorPerusahaan').value = kegiatanDetail.sektorPerusahaan || '';
                            document.getElementById('editPosisi').value = kegiatanDetail.posisi || '';
                            if (kegiatanDetail.tanggalMasuk) {
                                document.getElementById('editTanggalMasukBekerja').value = new Date(kegiatanDetail.tanggalMasuk).toISOString().split('T')[0];
                            }
                        } else if (kegiatanValueFromData === 'Melanjutkan Studi') {
                            document.getElementById('editNamaUniversitas').value = kegiatanDetail.namaUniversitas || '';
                            document.getElementById('editAlamatUniversitas').value = kegiatanDetail.alamatUniversitas || '';
                            document.getElementById('editFakultas').value = kegiatanDetail.fakultas || '';
                            document.getElementById('editProgramStudi').value = kegiatanDetail.programStudi || '';

                            if (kegiatanDetail.tanggalMasuk) {
                                document.getElementById('editTanggalMasukUniversitas').value = new Date(kegiatanDetail.tanggalMasuk).toISOString().split('T')[0];
                            }
                        } else if (kegiatanValueFromData === 'Berwirausaha') {
                            document.getElementById('editNamaUsaha').value = kegiatanDetail.namaUsaha || '';
                            document.getElementById('editAlamatUsaha').value = kegiatanDetail.alamatUsaha || '';
                            document.getElementById('editTeleponUsaha').value = kegiatanDetail.teleponUsaha || '';
                            document.getElementById('editBidangUsaha').value = kegiatanDetail.bidangUsaha || '';
                            document.getElementById('editJumlahKaryawan').value = kegiatanDetail.jumlahKaryawan || '';

                            if (kegiatanDetail.tanggalMulai) {
                                document.getElementById('editTanggalMulaiUsaha').value = new Date(kegiatanDetail.tanggalMulai).toISOString().split('T')[0];
                            }

                        } else if (kegiatanValueFromData === 'Kursus') {
                            document.getElementById('editNamaKursus').value = kegiatanDetail.namaKursus || '';
                            document.getElementById('editAlamatKursus').value = kegiatanDetail.alamatKursus || '';
                            document.getElementById('editBidangKursus').value = kegiatanDetail.bidangKursus || '';
                            if (kegiatanDetail.tanggalMulai) {
                                document.getElementById('editTanggalMulaiKursus').value = new Date(kegiatanDetail.tanggalMulai).toISOString().split('T')[0];
                            }
                            if (kegiatanDetail.tanggalSelesai) {
                                document.getElementById('editTanggalSelesaiKursus').value = new Date(kegiatanDetail.tanggalSelesai).toISOString().split('T')[0];
                            }
                        } else if (kegiatanValueFromData === 'Belum Ada Kegiatan') {
                            document.getElementById('editBelumAdaKegiatanDetail').value = kegiatanDetail.belumAdaKegiatanDetail || '';
                        }
                    }

                    if (tracerStudyData.feedback) {
                        document.getElementById('editFeedbackDetail').value = tracerStudyData.feedback.pesan || '';
                    }
                } else {
                    console.log('No tracerStudyData found or parsed. Resetting edit form.');
                    document.getElementById('formEditTracerStudy').reset();
                    toggleEditSections('');
                }
            }

            if (editFormBtn) {
                editFormBtn.addEventListener('click', function () {
                    editTracerStudyModal.style.display = 'block';
                    fillEditModalFormWithData();
                });
            }

            if (closeEditTracerStudyModalBtn) {
                closeEditTracerStudyModalBtn.addEventListener('click', function () {
                    editTracerStudyModal.style.display = 'none';
                });
            }

            window.addEventListener('click', function (event) {
                if (event.target == editTracerStudyModal) {
                    editTracerStudyModal.style.display = 'none';
                }
            });

            if (editKegiatanLulusSelect) {
                editKegiatanLulusSelect.addEventListener('change', function () {
                    toggleEditSections(this.value);
                });
            }
        });
    </script>


