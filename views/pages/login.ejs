<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Tracer Study - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description">
    <meta content="coderthemes" name="author">

    <link rel="shortcut icon" href="assets/images2/smk-bp.png">

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="assets/auth/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Style css -->
    <link href="assets/auth/style.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        /* Internal CSS untuk ikon mata */
        .password-input-container {
            position: relative;
        }

        .eye-icon {
            position: absolute;
            right: 1rem;
            /* Sesuaikan posisi horizontal ikon */
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6b7280;
            /* Warna abu-abu */
            font-size: 1.5rem;
            /* Ukuran ikon */
        }
    </style>
</head>

<body>
    <% if (typeof error !=='undefined' ) { %>
        <div class="alert-error"
            style="position: fixed; background-color: rgb(248, 113, 113); color: #fff; font-size: 0.875rem; line-height: 1.25rem; border-radius: 0.375rem; padding: 1rem; margin-bottom: 2.25rem; top: 1.75rem; width: 75%; max-width: 512px; left: 50%; transform: translateX(-50%); font-weight: bold;"
            role="alert">
            <p style="margin: 0;">
                <%= error %>
            </p>
        </div>
        <% } %>
            <section
                class="h-screen flex items-center justify-center bg-no-repeat inset-0 bg-cover bg-[url('../images/bg.html')]">
                <form action="/loginPage" method="post" id="loginForm">
                    <div class="container 2xl:px-80 xl:px-52">
                        <div class="bg-white rounded-lg p-5" style="box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;">
                            <div class="grid xl:grid-cols-5 lg:grid-cols-3 gap-6">

                                <div class="xl:col-span-2 lg:col-span-1 hidden lg:block">
                                    <div
                                        class="text-white rounded-lg flex flex-col justify-between gap-10 h-full w-full p-7">
                                        <img src="assets/auth/logo-auth.png" alt="Logo">
                                    </div>
                                </div>

                                <div class="xl:col-span-3 lg:col-span-2 lg:mx-10 my-auto">
                                    <div>
                                        <h1 class="text-2xl/tight mb-3">Login Alumni</h1>
                                        <p class="text-sm font-medium leading-relaxed">Masuk untuk mengisi form</p>
                                    </div>

                                    <div class="space-y-5 mt-5">
                                        <div>
                                            <label class="font-medium text-sm block mb-2" for="nisn">NISN</label>
                                            <input
                                                class="text-gray-500 border-gray-300 focus:ring-0 focus:border-gray-400 text-sm rounded-lg py-2.5 px-4 w-full"
                                                type="text" id="nisn" name="nisn" placeholder="Masukkan NISN">
                                        </div>
                                        <div>
                                            <label class="font-medium text-sm block mb-2"
                                                for="password">Password</label>
                                            <div class="password-input-container">
                                                <input
                                                    class="text-gray-500 border-gray-300 focus:ring-0 focus:border-gray-400 text-sm rounded-lg py-2.5 px-4 w-full"
                                                    type="password" id="password" name="password"
                                                    placeholder="Masukkan password">
                                                <span class="material-symbols-rounded eye-icon" id="togglePasswordBtn">
                                                    visibility
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="flex flex-wrap items-center justify-between gap-6 mt-5">
                                        <button type="submit"
                                            class="text-white text-sm rounded-lg px-6 py-2.5 w-full font-semibold"
                                            style="background-color: #16a34a;">Masuk</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
            </section>
            <script>
                const alertError = document.querySelector('.alert-error');
                if (alertError) {
                    setTimeout(() => {
                        alertError.remove();
                    }, 3000);
                }
            </script>
            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const togglePasswordBtn = document.getElementById('togglePasswordBtn');
                    const passwordInput = document.getElementById('password');

                    if (togglePasswordBtn && passwordInput) {
                        togglePasswordBtn.addEventListener('click', () => {
                            // Toggle the type attribute
                            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                            passwordInput.setAttribute('type', type);

                            // Toggle the eye icon
                            if (type === 'password') {
                                togglePasswordBtn.textContent = 'visibility'; // Ikon untuk password tersembunyi
                            } else {
                                togglePasswordBtn.textContent = 'visibility_off'; // Ikon untuk password terlihat
                            }
                        });
                    } else {
                        console.error("Input password atau tombol toggle tidak ditemukan.");
                    }
                });
            </script>
</body>

</html>